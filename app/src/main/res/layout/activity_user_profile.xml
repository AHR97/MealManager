<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@color/CadetBlue"
    android:orientation="vertical"
    android:paddingHorizontal="20sp"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15sp"
        android:layout_marginVertical="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="20sp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="175sp">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: "
            android:textColor="@color/CadetBlue"
            android:textSize="20sp"
            ></TextView>
            <TextView
                android:id="@+id/userFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: "
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                ></TextView>
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                ></TextView>
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: "
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                ></TextView>
            <TextView
                android:id="@+id/userDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session: "
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                ></TextView>
            <TextView
                android:id="@+id/userSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/CadetBlue"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                ></TextView>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/layout_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="15sp"
            >

            <TextView
                android:id="@+id/mealCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="@color/White"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="italic"
                android:text="@string/layout"></TextView>



        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginTop="30sp"
                android:background="@drawable/layout_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="15sp"
                >

                <TextView
                    android:id="@+id/mealCostList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/White"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:text="@string/list"></TextView>



            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>